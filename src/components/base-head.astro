---
import { links } from "@/constants";

const seo = {
  TITLE: "Jesmar Castillo",
  DESCRIPTION:
    "Jesmar Castillo is a web developer who enjoys building dynamic and engaging web experiences.",
};

interface Props {
  title?: string;
  description?: string;
}

const title = Astro.props.title
  ? `${Astro.props.title} - ${seo.TITLE}`
  : seo.TITLE;

const description = Astro.props.description || seo.DESCRIPTION;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />

  <link rel="canonical" href={links.PORTFOLIO} />
  <meta property="og:url" content={links.PORTFOLIO} />

  <title>{title}</title>
  <meta property="og:title" content={title} />
  <meta property="og:site_name" content={title} />
  <meta name="twitter:title" content={title} />

  <meta name="description" content={description} />
  <meta property="og:description" content={description} />
  <meta name="twitter:description" content={description} />

  <link rel="icon" type="image/png" href="/favicon.png" sizes="192x192" />
  <link
    rel="alternate icon"
    href="/favicon.png"
    type="image/png"
    sizes="192x192"
  />
  <link rel="apple-touch-icon" href="/favicon.png" sizes="192x192" />
  <link rel="mask-icon" href="/favicon.svg" color="#000000" />
  <meta name="theme-color" content="#000000" />

  <meta property="og:image" content="/og.png" />
  <meta name="twitter:image:src" content="/og.png" />

  <meta property="og:type" content="website" />
  <meta name="twitter:card" content="summary_large_image" />

  <slot />
</head>
