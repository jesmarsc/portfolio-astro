---
import { Icon } from "astro-icon/components";
import Link from "./link.astro";

import type { ComponentProps } from "astro/types";

type Props = ComponentProps<typeof Link>;
---

<Link
  {...Astro.props}
  class:list={[Astro.props.class, "flex items-center max-w-fit gap-0.5 group"]}
  ><slot /><Icon
    name="arrow"
    class="rotate-45 text-[1.25em] group-hover:rotate-90 transition-transform"
  /></Link
>
